#include <bits/stdc++.h>
using namespace std;   
class Solution {
public:
    int minimumTotal(vector<vector<int>>& triangle) {
        int n=triangle.size();
        int ans=INT_MAX;
        vector<int> pre(n);
        vector<int> cur(n);
        for(int j=0;j<n;j++){
            for(int i=0;i<=j;i++){
                if(i==0 && j==0)cur[0]=triangle[0][0];
                else if(i==0) {
                    cur[0]=pre[0]+triangle[j][0];
                }else if(i==j){
                    cur[i]=triangle[j][i]+pre[i-1];
                }else {
                    cur[i]=triangle[j][i]+min(pre[i],pre[i-1]);
                }
            }
            pre=cur;
        }
        for(int i=0;i<n;i++){
            ans=min(ans,cur[i]);
        }
        return ans;
    }
};